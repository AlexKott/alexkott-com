<header class="main-header" role="banner">
    <h1 class="main-header__title">Alex Kott</h1>
    {{>page-switch}}
</header>
<main class="page">
    <article class="main-intro">
        <div class="main-intro__image"></div>
        <div class="main-intro__text">{{{intro.text}}}</div>
        <button class="main-intro__button">+</button>
    </article>
    <section class="main-wrapper" id="main-wrapper" role="main">
        {{>main-list content=story pageId='page-0' position='left' isActive=true}}
        {{>main-list content=about pageId='page-1' position='right'}}
    </section>
</main>
<footer class="main-footer">
    {{>contact-links}}
</footer>
